<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This APP simulates a BLE sensor for development purpose of the app SeizureGuard"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To start the EEG behavior, press 'Start Advertising'"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/advertise_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Advertising" />

    <Button
        android:id="@+id/stop_advertise_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Advertising"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
</LinearLayout>